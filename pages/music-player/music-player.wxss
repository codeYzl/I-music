.bg-image {
    position: fixed;
    z-index: -1;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
  }
  
.bg-cover {
        position: fixed;
        z-index: -1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,.5);
        backdrop-filter: blur(50px);
    
      
  }
.tabs{
    display: flex;
    font-size: 28rpx;
    color: #aaa;
}
.tabs .divers{
    margin: 0 8rpx;
}
.tabs .active{
    color:#fff;
}
.music{
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    box-sizing: border-box;
    padding: 40rpx 60rpx;

    color:#fff;
}
.music .album{
    flex: 1;
}
.music .album .image{
    width: 100%;
}