.bg-image {
    position: fixed;
    z-index: -1;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
  }
  
.bg-cover {
        position: fixed;
        z-index: -1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,.5);
        backdrop-filter: blur(50px);
    
      
  }
.tabs{
    display: flex;
    font-size: 28rpx;
    color: #aaa;
}
.tabs .divers{
    margin: 0 8rpx;
}
.tabs .active{
    color:#fff;
}
.music{
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    box-sizing: border-box;
    padding: 40rpx 60rpx;

    color:#fff;
}
.music .album{
    flex: 1;
}
.music .album .image{
    width: 100%;
}
.music .info .name{
    font-size: 48rpx;
    font-weight: 700;
}
.music .info .singer{
    margin-top: 10rpx;

}
.music .process {
    margin: 12rpx 0;
}
.music .lyric{
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin: 12rpx 0;
}
.music .process .time{
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
}
.music .slider{
    margin: 16rpx 8rpx 10rpx 18rpx;
}
.music .control{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.music .control .btn{
    width: 60rpx;
    height: 60rpx;
}

.music .control .btn.mode{
    width: 80rpx;
    height: 100rpx;
}
.music .control .btn.musiclist{
    width: 80rpx;
    height: 80rpx;
}
.music .control .btn.play{
    width: 140rpx;
    height: 140rpx;
}
.lyric-list {
     color: #aaa;
     font-size: 28rpx;
     text-align: center;
     height: 100%;
     box-sizing: border-box;
     padding: 40rpx;
}
.lyric-list ::-webkit-scrollbar{
    display: none;
}
.lyric-list .item{
    height: 35px;
    line-height: 35px;
}
.lyric-list .item:first-of-type{
    margin-top: 100px;

}
.lyric-list .item:last-of-type{
    margin-bottom: 100px;
}
.lyric-list .item.active{
    color: green;
    font-size: 32rpx;
}