.bg-image {
    position: fixed;
    z-index: -1;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
  }
  
.bg-cover {
        position: fixed;
        z-index: -1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,.5);
        backdrop-filter: blur(50px);
    
      
  }
.nav{
    display: flex;
    height: 44px;
    color:#fff;
}

.left,.right,.center{
    display: flex;
    justify-content: center;
    align-items: center;
    
}
.nav .lef, .nav .right{
    width: 120rpx;
}
.nav .center{
    flex: 1;
}

.nav .left{
    padding-left: 20rpx;
}